@{
    ViewBag.Title = "Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h2>Admin Home</h2>

<section>
    <div class="container">
        <div class="row align-items-center">

            <div class="col-xl-4">
                <div class="card h-100">
                    <img src=@Url.Content("~/Media/Global.jpg") alt="" class="card-img-top h-25">
                    <div class="card-body">
                        <h3 class="card-title">Global Hub</h3>
                        <p class="card-text">Provides all the Global links.</p>
                        @Html.ActionLink("GlobalHub", "Index", "GlobalHub", null, new { @class = "btn btn-lg btn-outline-success" })
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
