@{
    ViewBag.Title = "EManagerHub";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h2>Engineering ADMIN Hub</h2>

<section>
    <div class="container">
        <div class="row align-items-center">

            <div class="col-xl-4">
                <div class="card h-100">
                    <img src=@Url.Content("~/Media/EAppMonitor.jpg") alt="" class="card-img-top h-25">
                    <div class="card-body">
                        <h3 class="card-title">Application Monitoring</h3>
                        <p class="card-text">Use to check current status of application.</p>
                    </div>
                </div>
            </div>

            <div class="col-xl-4">
                <div class="card h-100">
                    <img src=@Url.Content("~/Media/ETechSupp.jpg") alt="" class="card-img-top h-25">
                    <div class="card-body">
                        <h3 class="card-title">Tech support</h3>
                        <p class="card-text">Check on feedback regarding customer service or monitor reported problems.</p>
                    </div>
                </div>
            </div>

            <div class="col-xl-4">
                <div class="card h-100">
                    <img src=@Url.Content("~/Media/EAppDevelop.jpg") alt="" class="card-img-top h-25">
                    <div class="card-body">
                        <h3 class="card-title">App Development</h3>
                        <p class="card-text">Monitor App development or update development status.</p>
                    </div>
                </div>
            </div>

            <div class="col-xl-4">
                <div class="card h-100">
                    <img src=@Url.Content("~/Media/EAppAdmin.jpg") alt="" class="card-img-top h-25">
                    <div class="card-body">
                        <h3 class="card-title">App Admin</h3>
                        <p class="card-text">Use Application Administrator privileges to complete tasks.</p>
                    </div>
                </div>
            </div>

            <div class="col-xl-4">
                <div class="card h-100">
                    <img src=@Url.Content("~/Media/EAppManage.jpg") alt="" class="card-img-top h-25">
                    <div class="card-body">
                        <h3 class="card-title">Release Management</h3>
                        <p class="card-text">Manage releases by checking updates and feedback.</p>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
